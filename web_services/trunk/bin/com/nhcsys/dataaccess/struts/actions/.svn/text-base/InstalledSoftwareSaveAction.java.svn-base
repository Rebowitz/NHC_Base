package com.nhcsys.dataaccess.struts.actions;

import org.apache.struts.*;
import org.apache.struts.action.*;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.text.*;
import java.math.*;
import com.nhcsys.dataaccess.dao.*;
import com.nhcsys.dataaccess.dto.*;
import com.nhcsys.dataaccess.factory.*;
import com.nhcsys.dataaccess.struts.forms.*;

public class InstalledSoftwareSaveAction extends Action
{
	/**
	 * Method 'execute'
	 * 
	 * @param mapping
	 * @param form
	 * @param request
	 * @param response
	 * @throws Exception
	 * @return ActionForward
	 */
	public ActionForward execute(ActionMapping mapping, ActionForm form, HttpServletRequest request, HttpServletResponse response) throws Exception
	{
		try {
			// cast the form to the appropriate type
			InstalledSoftwareForm installedSoftwareForm = (InstalledSoftwareForm) form;
		
			// create the DAO class
			InstalledSoftwareDao dao = InstalledSoftwareDaoFactory.create();
		
			InstalledSoftware dto = new InstalledSoftware();
			dto.setSoftwareId( Long.parseLong( installedSoftwareForm.getSoftwareId() ));
			dto.setMachineId( Long.parseLong( installedSoftwareForm.getMachineId() ));
			dto.setProductKey( installedSoftwareForm.getProductKey());
			dto.setProductName( installedSoftwareForm.getProductName());
			dto.setCompanyName( installedSoftwareForm.getCompanyName());
			dto.setProductVersion( installedSoftwareForm.getProductVersion());
			dto.setCustomerId( Long.parseLong( installedSoftwareForm.getCustomerId() ));
		
			if (installedSoftwareForm.getCrudMethod().equalsIgnoreCase("insert")) {
				dao.insert( dto );
			} else if (installedSoftwareForm.getCrudMethod().equalsIgnoreCase("update")) {
				dao.update( dto.createPk(), dto );
			} else if (installedSoftwareForm.getCrudMethod().equalsIgnoreCase("delete")) {
				dao.delete( dto.createPk() );
			}
		
			return mapping.findForward( "success" );
		}
		catch (Exception e) {
			ActionErrors _errors = new ActionErrors();
			_errors.add( ActionErrors.GLOBAL_ERROR, new ActionError("internal.error", e.getClass().getName() + ": " + e.getMessage() ) );
			saveErrors( request, _errors );
			return mapping.findForward( "failure" );
		}
		
	}

}
